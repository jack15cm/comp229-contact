<%- include('../partials/header'); -%>
<%- include('../partials/main_nav'); -%>


<main class="container">
<div class="row">
    
        <h1><%= title %></h1>
        <%if(typeof displayName =='string' && displayName){%>
        <a href="/contactList/add" class="btn btn-primary" role="button">
            <i class="material-icons">add</i>Add a Contact</a>
            <%}%>
        <br>
        <table class = "">
            <tr>
                <th class="">Contact Name</th>
                <th class="">Contact Number</th>
                <th class="">Email Address</th>
                <%if(typeof displayName =='string' && displayName){%>
                <th class=""></th>
                <th class=""></th>
                <%}%>
                </tr>
           <% for(let count = 0; count<ContactList.length; count++){ %>
            <tr>
                <td class = ""><%=ContactList[count].contactName%></td>
                <td class = ""><%=ContactList[count].contactNumber%></td>
                <td class = ""><%=ContactList[count].email%></td>
                
                <%if(typeof displayName =='string' && displayName){%>
                <td class =""><a href="/contactList/edit/<%=ContactList[count]._id%>" class="btn btn-primary"><i class="material-icons">create</i>Edit</a></td>
                <td class =""><a href="/contactList/delete/<%=ContactList[count]._id%>" class="btn btn-danger"><i class="material-icons">delete</i>Delete</a></td>    
            <%}%>
            </tr>
                <%}%>
            </table>

        
    </div>
    </main>
<%- include('../partials/bottom_nav'); -%>
