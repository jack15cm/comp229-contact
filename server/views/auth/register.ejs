<%-include ('../partials/header.ejs');%>
<%-include ('../partials/main_nav.ejs');%>
  
<main class="container">
    <!--message Area-->
    <% if (messages.length>0){%>
        <div class="alert alert-danger">
            <%=messages%>
            </div>
            <%}%>
            <div class="row">
               
                    <h1>Please Register</h1>
                    <form  method="POST" autocomplete="off">
                        

                        <div class="row">
                            <div class="input-field col s6">
                              <input  name="username" id="username" placeholder = "Enter username" type="text" class="validate" required autofocus>
                              <label for="username">User name</label>
                            </div>
                        </div>
                            <div class="row">
                            <div class="input-field col s6">
                              <input  name="password" id="password" placeholder = "Enter password" type="password" class="validate" required >
                              <label for="password">Password</label>
                            </div>
                            </div>
                            <div class="row">
                            <div class="input-field col s6">
                              <input  name="email" id="email" placeholder = "Enter email address" type="text" class="validate" required >
                              <label for="email">Email</label>
                            </div>
                            </div>
                            <div class="row">
                            <div class="input-field col s6">
                              <input  name="displayName" id="displayName" placeholder = "Enter display name" type="text" class="validate" required >
                              <label for="displayName">Display name</label>
                            </div>
                        </div>
                        
                            

                            <div class="row">
                                <button class="btn waves-effect waves-light" type="submit" name="action">Register
                                 
                                </button>
                                <button class="btn waves-effect waves-light" name="action">Cancl
                                  
                                </button>
                               </div>    
            
                                
                        </form>
                    
                </div>
    </main>

  
   <%-include ('../partials/bottom_nav.ejs');%>
<%-include ('../partials/footer.ejs');%>   

